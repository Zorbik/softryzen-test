{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*"]
}